	<div class="booking-item accordian-item row" {{action 'toggleExpanded'}}>
		<div class="col-xs-10 room-info">
			<div class="row">
				<div class="col-xs-12 date">
					{{booking.pass_day}} {{booking.pass_start}} - {{booking.pass_stop}}
				</div>
			</div>
			<div class="row">
				<div class="col-xs-12 room-title">
					{{booking.booking_object.place}} - {{booking.booking_object.name}}
				</div>
			</div>
			{{#if isExpanded}}
				<div class="row">
					<div class="col-xs-12 room-meta">
						{{booking.booking_object.seats}} {{t 'room.meta.seats'}}
						{{#if booking.booking_object.has_computer}}
						, {{t 'room.meta.computer'}}
						{{/if}}
						{{#if booking.booking_object.has_whiteboard}}
						, {{t 'room.meta.whiteboard'}}
						{{/if}}
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12 room-location">
						{{getLibraryLocationName}}
					</div>
				</div>
			{{/if}}
		</div>

		<div class="col-xs-2">
			<div class="indicator pull-right">
				{{#if isExpanded}}
					<i class="fa fa-chevron-down rotate"></i>
				{{else}}
					<i class="fa fa-chevron-down"></i>
				{{/if}}
			</div>
		</div>
	</div>

	{{#if isExpanded}}
		<div class="row">
			<div class="col-xs-12 center-content">
				{{#if booking.cancelable}}
					<button class="btn btn-danger" {{action 'cancelBooking' booking.id}}>{{t 'myBookings.cancelBookingButton'}}</button>
				{{/if}}
				{{#if booking.confirmable }}
					<button {{action 'confirmBooking' booking.id}} {{bind-attr class=":btn :btn-primary booking.status"}}>{{t 'myBookings.confirmBookingButton'}}</button>
				{{/if}}
			</div>
		</div>
	{{/if}}
