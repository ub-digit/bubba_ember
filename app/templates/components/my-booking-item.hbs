	<div {{bind-attr id=booking.id}}  class="booking-item accordian-item row" {{action 'toggleExpanded'}}>
		<div class="col-xs-10 room-info">
			<div class="row">
				<div class="col-xs-12">
						<div class="info">
							<div class="date">
								{{getDate}} 
							</div>
							<div class="time">
								{{booking.pass_start}} - {{booking.pass_stop}}
							</div>

							<div class="location">
								{{return-safe-string getLibraryLocationName}}
							</div>
							<div class="room-title">
								{{booking.booking_object.place}} - {{booking.booking_object.name}}
							</div>
							<div class="row">
								<div class="col-xs-12 room-meta">
									{{booking.booking_object.seats}} {{t 'room.meta.seats'}}
									{{#if booking.booking_object.has_computer}}
									, {{t 'room.meta.computer'}}
									{{/if}}
									{{#if booking.booking_object.has_whiteboard}}
									, {{t 'room.meta.whiteboard'}}
									{{/if}}
								</div>
							</div>
							<div class="row">
								<div class="col-xs-12 signature">
									{{booking.signature}}
								</div>
							</div>
						</div>
				</div>
			</div>
		</div>

		<div class="col-xs-2">
			{{#if isExpandable}}
				<div class="indicator pull-right">
					{{#if isExpanded}}
						<i class="fa fa-chevron-down rotate"></i>
					{{else}}
						<i class="fa fa-chevron-down"></i>
					{{/if}}
				</div>
			{{/if}}
		</div>
	</div>

	{{#if isExpanded}}
		{{#if showConfirmSuccess}}
			<div class="row">
				<div class="center-content col-xs-12 col-md-6 col-md-offset-3">
					<div>{{t 'success.confirmSuccess'}}</div>
					<div class="book-feedback-graphics">
						<i class="fa fa-check"></i>
					</div>
					<div class="btn-area form-group">
						<button class="btn btn-default" {{action 'closeButtonClicked' booking.id}}>{{t 'closeButton'}}</button>
					</div>
				</div>
			</div>
		{{else}}
			<div class="row">
				<div class="col-xs-12 col-sm-4 col-sm-offset-4 center-content btn-area">
					{{#if booking.cancelable}}
						<button class="btn btn-danger btn-block" {{action 'cancelBooking' booking.id}}>{{t 'myBookings.cancelBookingButton'}}</button>
					{{/if}}
				</div>
			</div>
		{{/if}}
	{{/if}}
